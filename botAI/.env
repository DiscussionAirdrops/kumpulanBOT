# --- TOKEN & API KEYS ---
# Dapatkan dari:
# - Telegram: @BotFather (https://t.me/botfather)
# - Discord: Developer Portal (https://discord.com/developers/applications)
# - Groq: Console (https://console.groq.com)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here
GROQ_API_KEY=your_groq_api_key_here

# --- MYSQL CONFIGURATION ---
# Production database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_mysql_database

# --- FIREBASE CONFIGURATION ---
# Setup di Firebase Console (https://console.firebase.google.com)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_APP_ID=your_firebase_app_id
SERVICE_ACCOUNT_KEY_PATH=serviceAccountKey.json
TARGET_FIRESTORE_USER_ID=your_firestore_user_id

# --- IDs & LINKS ---
# Admin Telegram IDs (comma separated)
ADMIN_USER_IDS=your_admin_ids_comma_separated

# Target group untuk send recap harian
TARGET_TELEGRAM_CHAT_ID=your_target_chat_id

# Discord Channel IDs
ID_DISCORD_BRIDGE=your_discord_bridge_channel_id
ID_DISCORD_YOUTUBE=your_discord_youtube_channel_id
ID_DISCORD_TWITTER=your_discord_twitter_channel_id
ID_VERIFIKASI=your_discord_verification_channel_id
ID_WELCOME=your_discord_welcome_channel_id
ID_CHAT_INDO=your_discord_indo_chat_channel_id
ID_CHAT_ENGLISH=your_discord_english_chat_channel_id
NAMA_ROLE_VERIFIED=your_verified_role_name

# --- BRANDING LINKS ---
REF_LINK=your_referral_link
TWITTER_LINK=your_twitter_profile_link

# --- FLASK API CONFIGURATION ---
# Untuk cPanel: gunakan port 8000-8999 yang available
# Atau gunakan FLASK_HOST sebagai subdomain jika ada proxy
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# --- DEPLOYMENT NOTES ---
# cPanel: Pastikan FLASK_PORT tidak conflict dengan service lain
# Produksi: Set FLASK_DEBUG=False
# Development: Set FLASK_DEBUG=True untuk auto-reload
